{extends '../_mainLayout.latte'}

{block content}

<link rel="stylesheet" href="/css/mobile-logs.css">

<div class="container py-4" style="flex:1">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><span class="bi bi-shield-fill-exclamation">&nbsp;</span>{trans('logs.error.title')}</h1>
        <div>
        <button type="button" class="btn btn-success me-2" id="exportLogsBtn">
            <span class="bi bi-download"></span>&nbsp;{trans('logs.export.btn')}
        </button>
        <button type="button" class="btn btn-danger" id="truncateLogsBtn">
            <span class="bi bi-trash"></span>&nbsp;{trans('logs.truncate.btn')}
        </button>
    </div>
    </div>
    <div class="d-flex justify-content-between mb-3">
        <div>
            <label for="pageSize" class="me-2 desktop-pager-label">{trans('pager.pageSize')}:</label>
            <select id="pageSize" class="form-select d-inline w-auto">
                <option value="10">10</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
        </div>
        <div>
            <div class="input-group">
                <input type="text" id="search" class="form-control" placeholder="{trans('logs.search')}">
            </div>
        </div>
    </div>
    
    <!-- lade indicator -->
    <div id="loadingSpinner" style="display: none; text-align: center;">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">{trans('logs.loading')}</span>
        </div>
    </div>     

    <table class="table table-striped desktop-table">
        <thead>
            <tr>
                <th>#</th>
                <th>{trans('logs.type')}</th>
                <th>{trans('logs.date')}</th>
                <th>{trans('logs.user')}</th>
                <th>{trans('logs.context')}</th>
                <th>{trans('logs.message')}</th>
            </tr>
        </thead>
        <tbody id="logTableBody">
        </tbody>
    </table>

    <!-- F端r Mobile: Kartenansicht -->
    <div id="logCardsBody" class="d-block d-md-none desktop-table"></div>
    
    <div class="d-flex justify-content-between">
        <span id="paginationInfo" class="desktop-pager-summary">Seite 1 von X</span>
        <nav>
            <ul class="pagination" id="pagination"></ul>
        </nav>
    </div>
</div>

<!-- Truncate Confirmation Modal -->
    <div class="modal fade" id="truncateModal" tabindex="-1" aria-labelledby="truncateModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="truncateModalLabel">
                        <span class="bi bi-exclamation-triangle-fill"></span>&nbsp;{trans('logs.truncate.modal.title')}
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <strong>{trans('logs.truncate.modal.warning')}</strong>
                    </div>
                    <p>{trans('logs.truncate.modal.backup')}</p>
                    <p id="truncateConfirmText" class="fw-bold"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        {trans('logs.truncate.modal.btn.cancel')}
                    </button>
                    <button type="button" class="btn btn-success" id="exportFirstBtn">
                        <span class="bi bi-download"></span>&nbsp;{trans('logs.truncate.modal.btn.export')}
                    </button>
                    <button type="button" class="btn btn-danger" id="confirmTruncateBtn">
                        <span class="bi bi-trash"></span>&nbsp;{trans('logs.truncate.modal.btn.delete')}
                    </button>
                </div>
            </div>
        </div>
    </div>

<!-- Data-Attribute f端r Truncate Messages -->
<div id="truncate-messages" 
     data-confirm="{trans('logs.truncate.modal.confirm')}"
     data-success="{trans('logs.truncate.success')}"
     data-error="{trans('logs.truncate.error')}"
     style="display:none;"></div>

<!-- Data-Attribute f端r Messages -->
<div id="log-messages" 
     data-msg4="{trans('pager.page')}"
     data-msg5="{trans('pager.of')}"
     data-msg6="{trans('logs.error1')}"
     style="display:none;"></div>

<!-- Data-Attribute f端r Config -->
<div id="log-config" 
     data-type="error"
     data-fetch-url="/admin/logs/fetchErrorlogs"
     data-auto-fetch="true"
     style="display:none;"></div>

<!-- Externe Scripts -->
<script src="/js/utils/logs-universal-min.js"></script>
    <script src="/js/utils/logs-export-min.js"></script>
    <script src="/js/utils/logs-truncate-min.js"></script>
{/block}