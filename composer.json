{
    "require": {
        "php": ">=8.3",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-xml": "*",
        "ext-xmlwriter": "*",
        "ext-simplexml": "*",
        "ext-zip": "*",
        "ext-bcmath": "*",
        "ext-gd": "*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-fileinfo": "*",
        "ext-mbstring": "*",
        "ext-tokenizer": "*",
        "ext-filter": "*",
        "mikecao/flight": "^3.13",
        "latte/latte": "^3.0",
        "j4mie/idiorm": "^1.5",
        "phpmailer/phpmailer": "^6.9",
        "robthree/twofactorauth": "^3.0",
        "endroid/qr-code": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.74",
        "squizlabs/php_codesniffer": "*",
        "phpunit/phpunit": "^11.5",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "test:coverage": "phpunit --coverage-html coverage --coverage-text",
        "test:unit": "phpunit --testsuite Unit --testdox",
        "test:integration": "phpunit --testsuite Integration --testdox",
        "test:filter": "phpunit --filter",
        "cs:check": "phpcs",
        "cs:fix": "php-cs-fixer fix"
    }
}
